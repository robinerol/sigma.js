{
  "name": "sigma",
  "version": "2.0.0-alpha40",
  "description": "A JavaScript library dedicated to graph drawing.",
  "homepage": "http://sigmajs.org",
  "bugs": "http://github.com/jacomyal/sigma.js/issues",
  "main": "endpoint.js",
  "typings": "types/endpoint.d.ts",
  "scripts": {
    "build": "webpack --progress && webpack --progress --mode production",
    "clean": "rimraf animate.js camera.js captor.js easings.js endpoint.js quadtree.js renderer.js type.js sigma-graphology.js utils.js captors heuristics renderers types",
    "transpile": "tsc -p ./tsconfig.transpile.json -d --declarationDir types && replace '\\.glsl' '.glsl.js' renderers -r && webpack --config ./webpack.programs.config.js",
    "examples": "webpack serve --config ./examples/webpack.config.js --progress",
    "gitignore": "jq -r '.sigma.clean' package.json | tr ' ' '\\n' >> .gitignore",
    "lint": "eslint examples src test --ext .ts",
    "postpublish": "npm run clean",
    "prettier": "prettier --write examples src test",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run transpile && npm run build",
    "test": "mocha --require ts-node/register ./test/unit/**/*.ts",
    "e2e:test": "mocha --require ts-node/register ./test/e2e/**/*.spec.ts --exit",
    "e2e:generate": "node -r ts-node/register test/e2e/generate.ts",
    "types": "npx tsc --declaration --emitDeclarationOnly --outDir lib"
  },
  "sigma": {
    "clean": "animate.js camera.js captor.js easings.js endpoint.js quadtree.js renderer.js type.js sigma-graphology.js utils.js captors heuristics renderers types",
    "folders": "examples src test"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/jacomyal/sigma.js.git"
  },
  "contributors": [
    {
      "name": "Alexis Jacomy",
      "url": "http://github.com/jacomyal"
    },
    {
      "name": "Guillaume Plique",
      "url": "http://github.com/Yomguithereal"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@yomguithereal/helpers": "^1.1.1",
    "events": "^3.2.0",
    "graphology-metrics": "1.14.0",
    "graphology-utils": "^1.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@types/d3-scale": "^3.2.1",
    "@types/mocha": "^8.0.3",
    "@types/pixelmatch": "^5.2.2",
    "@types/pngjs": "^3.4.2",
    "@types/puppeteer": "^5.4.0",
    "@types/webpack-dev-server": "^3.11.1",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "chroma-js": "^2.1.0",
    "d3-scale": "^3.2.3",
    "eslint": "^7.13.0",
    "faker": "^5.1.0",
    "glob": "^7.1.3",
    "graphology": "^0.19.2",
    "graphology-communities-louvain": "^1.3.0",
    "graphology-components": "^1.1.0",
    "graphology-generators": "^0.11.0",
    "graphology-gexf": "^0.7.1",
    "graphology-layout": "0.4.0",
    "graphology-layout-forceatlas2": "^0.6.0",
    "graphology-layout-noverlap": "0.2.0",
    "graphology-types": "^0.19.0",
    "html-webpack-plugin": "^4.5.0",
    "mocha": "^8.2.1",
    "pandemonium": "^1.5.0",
    "pixelmatch": "^5.2.1",
    "pngjs": "^6.0.0",
    "prettier": "^2.1.2",
    "puppeteer": "^5.4.1",
    "raw-loader": "^4.0.2",
    "replace": "^1.2.0",
    "rimraf": "^3.0.0",
    "simple-statistics": "^7.3.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.1.9"
  },
  "keywords": [
    "graph",
    "graphology",
    "renderer",
    "sigma",
    "canvas",
    "webgl"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/camelcase": "off"
    }
  }
}
